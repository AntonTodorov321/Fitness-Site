@model ShowDetailsMessageViewModel

@{
    ViewBag.Title = "Details";
}

<h1 class="text-center pb-3">@ViewBag.Title</h1>
<partial name="_DetailMessagePartial" model="Model"/>

<form class="text-center pt-2" asp-area=""  asp-controller="Message" asp-action="SendMessage" method="get" asp-route-id="@Model.SenderId">
       <input type="submit" value="Reply" class="btn btn-primary">
</form>

<form class="text-center pt-2" asp-area=""  asp-controller="Message" asp-action="Delete" method="post" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger">
</form>
