@model SendMessageViewModel

  <div class="row">
  </div>
    <div class="col">
            <label class="pb-1 pt-2">Question:</label>
            <textarea asp-for="@Model.Question" class="form-control" placeholder="Question" rows="3"></textarea>
       </div>
       <div class="col">
            <label class="pb-1 pt-2">Description:</label>
            <textarea asp-for="@Model.Description" class="form-control" placeholder="Description" rows="6"></textarea>
       </div>
      <input class="btn btn-primary mt-2 d-grid gap-2 col-6 mx-auto" type="submit" value="Send">